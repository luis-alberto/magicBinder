<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:id="@+id/binder_data_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" >
            <TextView
                android:id="@+id/binder_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/binder_name_label"/>
            <TextView
                android:id="@+id/binder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_below="@+id/binder_name_label" />
            <TextView
                android:id="@+id/binder_binders_cards_binder_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/binder_name"
                android:text="@string/binder_binders_cards_binder_label"/>
            <TextView
                android:id="@+id/binder_binders_cards_binder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_below="@+id/binder_binders_cards_binder_label" />
        </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/binder_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/binder_not_found" />
</RelativeLayout>
